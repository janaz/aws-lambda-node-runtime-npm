{
  "compilerOptions": {
    "target": "es2019",
    "allowJs": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "outDir": "./dist/compile",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src/**/*"]
}
